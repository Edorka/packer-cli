<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Build Demo</title>
{{#unless inlineStyle}}
    <link href="../../{{distDir}}/styles/{{projectName}}.css" rel="stylesheet"/>
{{/unless}}
</head>
<body>
  <div class="container"></div>
{{#if require}}
  <script src="../helper/require.js"></script>
  <script>
    require.config({
      baseUrl: '../../{{distDir}}/bundle',
      paths: {
        '{{amdModule}}': '{{projectName}}'
      }
    });

    require(['{{amdModule}}'], function (lib) {
      var main = new lib.Main();
      main.render('.container');
    });
  </script>
{{/if}}
{{#if iife}}
  <script src="../../{{distDir}}/bundle/{{projectName}}.js"></script>
  <script type="application/javascript">
    var main = new window.{{namespace}}.Main();
    main.render('.container');
  </script>
{{/if}}
{{#if system}}
  <script src="../helper/system.js"></script>
  <script>
    window.System.config({
      bundles: {
        '../../{{distDir}}/bundle/{{projectName}}.js': ['{{namespace}}']
      }
    });

    window.System.import('{{namespace}}')
      .then(function (lib) {
        var main = new lib.Main();
        main.render('.container');
      }, function (e) {
        console.error(e)
      });
  </script>
{{/if}}
</body>
</html>
